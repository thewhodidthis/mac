# Add `.html` or `.css` file extensions where missing
adjust_extension = on

# Skip going up directory structure when downloading recursively
no_parent = on

# Ignore `robots.txt` and `<meta name=robots content=nofollow>`
robots = off

# Print HTTP and FTP responses
server_response = on

# Wait a minute before timing out DNS, connect and read, default is 15'
timeout = 60

# Use server provided last modification date when possible
timestamping = on

# Retry just a few times when a download fails, default is 20
tries = 3

# Use last component of a redirection URL for naming files locally
trust_server_names = on
